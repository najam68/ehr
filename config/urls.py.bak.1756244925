from django.contrib import admin
from django.urls import include, path
from django.shortcuts import redirect  # for root redirect

# API docs (drf-spectacular)
from drf_spectacular.views import (
    SpectacularAPIView,
    SpectacularSwaggerView,
    SpectacularRedocView,
)

# --- App URLConfs ---
# apps.portal.urls  : serves /portal/ (dashboard)
# apps.claims.urls  : serves /claims/, /denials/, and the API under /api/claims/...
# apps.patients.urls: serves /patients/

urlpatterns = [
    # Admin
    path("admin/", admin.site.urls),

    # Portal dashboard
    path("portal/", include("apps.portal.urls")),

    # Pages + API (claims/denials)
    path("", include("apps.claims.urls")),

    # Pages (patients)
    path("", include("apps.patients.urls")),

    # API schema + docs
    path("api/schema/", SpectacularAPIView.as_view(), name="schema"),
    path("api/docs/", SpectacularSwaggerView.as_view(url_name="schema"), name="swagger-ui"),
    path("api/redoc/", SpectacularRedocView.as_view(url_name="schema"), name="redoc"),
    path("emr/", include("apps.emr.urls")),
]

# Root -> /portal/
urlpatterns += [
    path("", lambda request: redirect("/portal/")),
    path("", include("apps.claims.urls")),
]
