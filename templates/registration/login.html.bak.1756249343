<!doctype html>
<html><head>
<meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<title>Login</title></head>
<body class="bg-light"><div class="container py-5" style="max-width:480px">
  <h1 class="h4 mb-3">Sign in</h1>
  {% if form.errors %}<div class="alert alert-danger">Invalid credentials.</div>{% endif %}
  <form method="post">{% csrf_token %}
    <div class="mb-2"><label class="form-label">Username</label>{% csrf_token %}<input name="username" class="form-control" required></div>
    <div class="mb-2"><label class="form-label">Password</label>{{ form.password|add_class:"form-control" }}</div>
    <button class="btn btn-primary mt-2" type="submit">Sign in</button>
  </form>
</div></body></html>
